---
import '../styles/global.css';
const { title = 'Meraki · Psicopedagogía Interactiva' } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
		<meta name="description" content="Glosario y libro interactivo colaborativo de psicopedagogía." />
	</head>

	<body class="min-h-screen bg-meraki-cream">
		<!-- NAVBAR PRINCIPAL -->
		<header class="sticky top-0 z-40 border-b border-slate-200/60 bg-[#fff7ef]/80 backdrop-blur">
			<nav class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3 lg:px-0">
				<!-- Logo / Nombre -->
				<a href="#hero" class="flex items-center gap-2">
					<div class="flex h-9 w-9 items-center justify-center rounded-full bg-meraki-pink shadow-md">
						<span class="text-xl font-display text-white">M</span>
					</div>
					<div class="leading-tight">
						<p class="font-display text-xs uppercase tracking-[0.25em] text-slate-500">Meraki</p>
						<p class="font-display text-sm font-semibold text-slate-800">Psicopedagogía Interactiva</p>
					</div>
				</a>

				<!-- Navbar flotante rosa (derecha) -->
				<div class="hidden lg:block">
					<div class="meraki-fab">
						<!-- Cada item tiene data-label para el tooltip animado -->
						<a class="meraki-fab-item" data-label="Inicio" href="#hero" aria-label="Inicio">
							<span class="meraki-fab-icon">
								<!-- home -->
								<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 1024 1024" fill="currentColor">
									<path d="M946.5 505L560.1 118.8l-25.9-25.9a31.5 31.5 0 0 0-44.4 0L77.5 505a63.9 63.9 0 0 0-18.8 46c.4 35.2 29.7 63.3 64.9 63.3h42.5V940h691.8V614.3h43.4c17.1 0 33.2-6.7 45.3-18.8a63.6 63.6 0 0 0 18.7-45.3c0-17-6.7-33.1-18.8-45.2zM568 868H456V664h112v204zm217.9-325.7V868H632V640c0-22.1-17.9-40-40-40H432c-22.1 0-40 17.9-40 40v228H238.1V542.3h-96l370-369.7 23.1 23.1L882 542.3h-96.1z" />
								</svg>
							</span>
						</a>

						<a class="meraki-fab-item" data-label="Glosario" href="#info" aria-label="Glosario">
							<span class="meraki-fab-icon">
								<!-- lupa -->
								<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" aria-hidden="true" viewBox="0 0 24 24" stroke-width="2" fill="none" stroke="currentColor">
									<path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" stroke-linejoin="round" stroke-linecap="round"></path>
								</svg>
							</span>
						</a>

						<a class="meraki-fab-item" data-label="Libro" href="#libro" aria-label="Libro">
							<span class="meraki-fab-icon">
								<!-- icono libro/tablet -->
								<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" width="1em" height="1em" fill="currentColor">
									<path d="M6 2h7a3 3 0 0 1 3 3v1h2a2 2 0 0 1 2 2v10.5A2.5 2.5 0 0 1 17.5 21H6A3 3 0 0 1 3 18V5a3 3 0 0 1 3-3Zm0 2a1 1 0 0 0-1 1v13c0 .552.448 1 1 1h9.5a.5.5 0 0 0 .5-.5V8H13a2 2 0 0 1-2-2V4H6Zm6 0v2a0 0 0 0 0 0 0h3V5a1 1 0 0 0-1-1h-2Z" />
								</svg>
							</span>
						</a>

						<a class="meraki-fab-item" data-label="Colaborar" href="#colabora" aria-label="Colaborar">
							<span class="meraki-fab-icon">
								<!-- personas -->
								<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 24 24" fill="currentColor">
									<path d="M16 11a4 4 0 1 0-4-4 4.003 4.003 0 0 0 4 4Zm-8 0a3 3 0 1 0-3-3 3.003 3.003 0 0 0 3 3Zm0 2c-2.673 0-8 1.337-8 4v1a1 1 0 0 0 2 0v-1c0-1.116 3.459-2 6-2s6 .884 6 2v1a1 1 0 0 0 2 0v-1c0-2.663-5.327-4-8-4Zm8 0c-.39 0-.824.023-1.291.065a1 1 0 0 0 .182 1.988C17.5 15.053 21 16.18 21 17.5v1a1 1 0 0 0 2 0v-1c0-2.508-4.375-4.5-7-4.5Z" />
								</svg>
							</span>
						</a>
					</div>
				</div>

				<!-- Menú móvil sencillo -->
				<button
					class="lg:hidden rounded-full bg-white/80 px-3 py-2 text-xs font-semibold shadow"
					onclick="document.querySelector('#mobile-nav')?.classList.toggle('hidden')"
					aria-expanded="false"
					aria-controls="mobile-nav"
				>
					Menú
				</button>
			</nav>

			<!-- menú móvil -->
			<div id="mobile-nav" class="block border-t border-slate-200 bg-[#fff7ef] px-4 py-3 text-sm lg:hidden hidden">
				<ul class="flex flex-col gap-2 text-slate-700">
					<li><a href="#hero">Inicio</a></li>
					<li><a href="#info">Información</a></li>
					<li><a href="#libro">Libro</a></li>
					<li><a href="#colabora">Colaborar</a></li>
					<li><a href="#contacto">Contacto</a></li>
				</ul>
			</div>
		</header>

		<main>
			<slot />
		</main>

		<footer class="mt-16 border-t border-slate-200/70 bg-white/80">
			<div class="mx-auto flex max-w-6xl flex-col gap-4 px-4 py-8 text-sm text-slate-500 lg:flex-row lg:items-center lg:justify-between lg:px-0">
				<p>Meraki · Psicopedagogía Interactiva · {new Date().getFullYear()}</p>
				<p class="text-xs">Proyecto académico · Libro interactivo colaborativo para docentes de secundaria.</p>
			</div>
		</footer>
	</body>
</html>