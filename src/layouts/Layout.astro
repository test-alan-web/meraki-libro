---
import '../styles/global.css';
const { title = 'Meraki · Psicopedagogía Interactiva' } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>{title}</title>
		<meta name="description" content="Glosario y libro interactivo colaborativo de psicopedagogía." />
	</head>

	<body class="min-h-screen bg-meraki-cream">
		<!-- NAVBAR PRINCIPAL -->
		<header class="sticky top-0 z-40 border-b border-slate-200/60 bg-[#fff7ef]/80 backdrop-blur">
			<nav class="mx-auto flex max-w-6xl items-center justify-between px-4 py-3 lg:px-0">
				<!-- Logo / Nombre -->
				<a href="#hero" class="flex items-center gap-2">
					<div class="flex h-9 w-9 items-center justify-center rounded-full bg-meraki-pink shadow-md">
						<span class="text-xl font-display text-white">M</span>
					</div>
					<div class="leading-tight">
						<p class="font-display text-xs uppercase tracking-[0.25em] text-slate-500">Meraki</p>
						<p class="font-display text-sm font-semibold text-slate-800">Psicopedagogía Interactiva</p>
					</div>
				</a>

				<!-- Navbar flotante rosa (derecha) -->
				<div class="flex gap-4">
					<!-- Cada item tiene data-label para el tooltip animado -->
					<a class="nav-pill__btn" data-label="Inicio" href="#hero" aria-label="Inicio">
						<span class="meraki-fab-icon">
							<!-- home -->
							<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" viewBox="0 0 1024 1024" fill="currentColor">
								<path d="M946.5 505L560.1 118.8l-25.9-25.9a31.5 31.5 0 0 0-44.4 0L77.5 505a63.9 63.9 0 0 0-18.8 46c.4 35.2 29.7 63.3 64.9 63.3h42.5V940h691.8V614.3h43.4c17.1 0 33.2-6.7 45.3-18.8a63.6 63.6 0 0 0 18.7-45.3c0-17-6.7-33.1-18.8-45.2zM568 868H456V664h112v204zm217.9-325.7V868H632V640c0-22.1-17.9-40-40-40H432c-22.1 0-40 17.9-40 40v228H238.1V542.3h-96l370-369.7 23.1 23.1L882 542.3h-96.1z" />
							</svg>
						</span>
					</a>

					<a class="nav-pill__btn" data-label="Proyectos" href="#proyectos" aria-label="Proyectos">
						<span class="meraki-fab-icon">
							<!-- lupa -->
							<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" aria-hidden="true" viewBox="0 0 24 24" stroke-width="2" fill="none" stroke="currentColor">
								<path d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" stroke-linejoin="round" stroke-linecap="round"></path>
							</svg>
						</span>
					</a>

					<a class="nav-pill__btn" data-label="Sobre mí" href="#sobre-mi" aria-label="Sobre mí">
						<span class="meraki-fab-icon">
							<!-- icono libro/tablet -->
							<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 24 24">
								<path d="M12 2.5a5.5 5.5 0 0 1 3.096 10.047 9.005 9.005 0 0 1 5.9 8.181.75.75 0 1 1-1.499.044 7.5 7.5 0 0 0-14.993 0 .75.75 0 0 1-1.5-.045 9.005 9.005 0 0 1 5.9-8.18A5.5 5.5 0 0 1 12 2.5ZM8 8a4 4 0 1 0 8 0 4 4 0 0 0-8 0Z" />
							</svg>
						</span>
					</a>

					<a class="nav-pill__btn" data-label="Contacto" href="#contacto" aria-label="Contacto">
						<span class="meraki-fab-icon">
							<!-- personas -->
							<svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" viewBox="0 0 24 24">
								<circle cx="9" cy="21" r="1"></circle>
								<circle cx="20" cy="21" r="1"></circle>
								<path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"></path>
							</svg>
						</span>
					</a>
				</div>
			</nav>
		</header>

		<main>
			<slot />
		</main>

		<footer class="mt-16 border-t border-slate-200/70 bg-white/80">
			<div class="mx-auto flex max-w-6xl flex-col gap-4 px-4 py-8 text-sm text-slate-500 lg:flex-row lg:items-center lg:justify-between lg:px-0">
				<p>Meraki · Psicopedagogía Interactiva · {new Date().getFullYear()}</p>
				<p class="text-xs">Proyecto académico · Libro interactivo colaborativo para docentes de secundaria.</p>
			</div>
		</footer>
	</body>
</html>
